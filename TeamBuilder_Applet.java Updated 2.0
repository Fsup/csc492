   private Object makeObj(final String item)  {
     return new Object() { public String toString() { return item; } };
   }
   
   
   public float CalculateDistances(float a1, float b1, float a2, float b2)
   {

       
       double distance;
       float finalResult = 0;
       
       if(a1 == a2 && b1 == b2)
       {
           distance = 0;
       }
       else
       {
           distance = Math.acos(Math.cos(a1) * Math.cos(b1) * Math.cos(a2) * Math.cos(b2) + 
                   Math.cos(a1) * Math.sin(b1) * Math.cos(a2) * Math.sin(b2) + Math.sin(a1) * Math.sin(a2)) / 
                   360 * 2 * Math.PI * RADIUS_OF_EARTH;
           
           finalResult = (float)distance;
       }
       
       return finalResult;
   }
